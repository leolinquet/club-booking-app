{
  "scripts": {
    "dev": "concurrently \"npm:server:start\" \"npm:client:dev\"",
    "server:start": "DOTENV_CONFIG_PATH=server/.env node -r dotenv/config server/server.js",
    "client:dev": "npm --prefix client run dev",

    "build": "npm ci && NPM_CONFIG_PRODUCTION=false npm --prefix client ci && npm --prefix client run build",
    "start": "node server/server.js"
  },
  "engines": { "node": ">=20 <23" },
  "dependencies": {
    "dotenv": "^17.2.2",
    "framer-motion": "^12.23.12",
    "pg": "^8.16.3"
  },
  "devDependencies": {
    "concurrently": "^8.2.0"
  }
}
