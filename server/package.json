{
  "name": "club-booking-api",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "dev": "node server.js",
    "start": "node server.js",
    "start:local": "nohup env $(cat .env | xargs) node -r dotenv/config server.js > server.log 2>&1 & echo $! > server.pid",
    "stop:local": "if [ -f server.pid ]; then kill $(cat server.pid) && rm -f server.pid; else echo 'no server.pid'; fi",
    "migrate": "node migrate.mjs",
    "check:db": "node check_db.mjs",
    "check:seed": "node check_seed.mjs"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "luxon": "^3.3.0",
    "better-sqlite3": "^12.2.0",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "express": "^4.19.2",
    "helmet": "^7.0.0",
    "nodemailer": "^7.0.6",
    "pg": "^8.16.3",
    "resend": "^6.0.3"
  }
}
